<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_amazon_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.utils.gdkcorp.comparer.AmazonFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/amazon_recyclerview"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/amazon_frag_paging_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/page_first"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="48dp"
            android:src="@drawable/first_page"/>

        <ImageButton
            android:id="@+id/page_previous"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="48dp"
            android:src="@drawable/previous_page"/>

        <TextView
            android:id="@+id/current_page"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.20"
            android:gravity="center_vertical|right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textSize="24sp"
            android:gravity="center_vertical"
            android:text="/"/>

        <TextView
            android:id="@+id/total_page"
            android:layout_width="0dp"
            android:layout_weight="0.20"
            android:layout_height="48dp"
            android:gravity="center_vertical|right"/>

        <ImageButton
            android:id="@+id/page_next"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="48dp"
            android:src="@drawable/page_next"/>

        <ImageButton
            android:id="@+id/page_last"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="48dp"
            android:src="@drawable/last_page"/>

    </LinearLayout>

</LinearLayout>
